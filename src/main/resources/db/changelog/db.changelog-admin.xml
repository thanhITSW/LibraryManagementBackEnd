<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <!-- create account admin if not existed -->
    <changeSet id="001-insert-admin-account" author="liquibase">
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM account WHERE email = 'admin@gmail.com'
                </sqlCheck>
            </not>
        </preConditions>

        <insert tableName="account">
            <column name="id" value="73531e5a-eac0-4286-822d-640fc0fa3ccc"/>
            <column name="email" value="admin@gmail.com"/>
            <column name="password" value="$2a$10$FbzXRD3D89D110ofKIfg/.EX80MBz2/mT0DU2kEwqLNLPppe8DZwm"/>
            <column name="first_name" value="Admin"/>
            <column name="last_name" value="User"/>
            <column name="dob" value="1990-01-01"/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <!-- set role ADMIN for admin account -->
    <changeSet id="002-assign-admin-role" author="liquibase">
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM account_roles ar
                    JOIN account a ON ar.account_id = a.id
                    WHERE a.email = 'admin@gmail.com' AND ar.roles_name = 'ADMIN'
                </sqlCheck>
            </not>
        </preConditions>

        <!-- Get id from account admin -->
        <sql>
            SET @admin_id = (SELECT id FROM account WHERE email = 'admin@gmail.com');
        </sql>

        <insert tableName="account_roles">
            <column name="account_id" value="@@admin_id"/>
            <column name="roles_name" value="ADMIN"/>
        </insert>
    </changeSet>

</databaseChangeLog>